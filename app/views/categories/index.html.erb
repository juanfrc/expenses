<div class ="container" >
  <div class ="col-md-4 col-md-offset-4 text-center">
    <div class="panel panel-primary">
      <div class="panel-heading">List of Categories</div>

        <table class ="table table-hover">
          <thead class="info">
            <th class = "col-md-3 text-center">Category</th>
            <th class = "col-md-1 text-center">Edit|Delete </th>

          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= link_to category.name, category_path(category) %></td>
                <td><%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_category_path(category) %> | <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, category, method: :delete, data: { confirm: 'Are you sure? This will eliminate all the category expenses' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

 <div class="container text-center">
      <%= link_to "Add an Expense", new_expense_path, class:"btn btn-primary" %>
      <%= link_to "Create a Category", new_category_path, class:"btn btn-primary" %>
</div>

