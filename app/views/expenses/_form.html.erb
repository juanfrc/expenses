<%= form_for @expense do |f| %>

  <div class ="form-group">
    <%= f.label :category_id, 'Category:' %><br>   
    <%= f.collection_select(:category_id, Category.all, :id, :name)%>
  </div>
 
  <div class ="form-group">
    <%= f.label :date, 'Date:'%><br>
    <%= f.date_field :date, class: 'form control'%>
  </div>
  
  <div class ="form-group">
    <%= f.label :concept, 'Concept:' %><br>
    <%= f.text_area :concept, class: 'form control', rows:'2', placeholder:"Expense description" %>
  </div>

 <div class ="input-group">
    <%= f.label :amount, 'Amount:' %> <br>
    <%= f.number_field :amount, class: 'form control', placeholder:"$" %>
    </div>



    <%= f.button :submit => "", class: 'btn btn-success btn-form'%>

<% end %>